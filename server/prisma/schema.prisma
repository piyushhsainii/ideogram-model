generator client {
  provider = "prisma-client-js"
}

model User {
  id          String     @id @default(uuid())
  name        String
  email       String     @unique
  about       String
  trainingImg String
  balance     Int        @default(2)
  avatar_url  String
  provider    String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  Prompt      Prompt[]
  Payments    Payments[]
}

model Prompt {
  id        String   @id @default(uuid())
  userid    String
  prompt    String
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userid], references: [id])
}

model Payments {
  id        String   @id @default(uuid())
  userEmail String
  orderID   String
  paymentId String
  signature String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userEmail], references: [email])
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
